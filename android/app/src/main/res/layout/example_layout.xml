<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_container_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/widget_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginVertical="4dp"
            android:background="@drawable/rounded_clip"
            android:clipToOutline="true">

            <ProgressBar
                android:id="@+id/progress1_1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="0"
                android:progressBackgroundTint="#d9ead3"
                android:progressDrawable="@drawable/rounded_bar"
                android:progressTint="#93c47d" />

            <ProgressBar
                android:id="@+id/progress1_2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="0"
                android:progressBackgroundTint="#fff2cc"
                android:progressDrawable="@drawable/rounded_bar"
                android:progressTint="#ffd966" />

            <ProgressBar
                android:id="@+id/progress1_3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="0"
                android:progressBackgroundTint="#ead1dc"
                android:progressDrawable="@drawable/rounded_bar"
                android:progressTint="#c27ba0" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginHorizontal="10dp"
                android:text="中商"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/amount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginHorizontal="10dp"
                android:text="-"
                android:textSize="15dp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginVertical="4dp"
            android:background="@drawable/rounded_clip"
            android:clipToOutline="true">

            <ProgressBar
                android:id="@+id/progress2_1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="0"
                android:progressBackgroundTint="#d9ead3"
                android:progressDrawable="@drawable/rounded_bar"
                android:progressTint="#93c47d" />

            <ProgressBar
                android:id="@+id/progress2_2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="0"
                android:progressBackgroundTint="#fff2cc"
                android:progressDrawable="@drawable/rounded_bar"
                android:progressTint="#ffd966" />

            <ProgressBar
                android:id="@+id/progress2_3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="0"
                android:progressBackgroundTint="#ead1dc"
                android:progressDrawable="@drawable/rounded_bar"
                android:progressTint="#c27ba0" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginHorizontal="10dp"
                android:text="中技"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/amount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginHorizontal="10dp"
                android:text="-"
                android:textSize="15dp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/rounded_clip"
            android:clipToOutline="true">

            <ProgressBar
                android:id="@+id/progress3_1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="0"
                android:progressBackgroundTint="#d9ead3"
                android:progressDrawable="@drawable/rounded_bar"
                android:progressTint="#93c47d" />

            <ProgressBar
                android:id="@+id/progress3_2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="0"
                android:progressBackgroundTint="#fff2cc"
                android:progressDrawable="@drawable/rounded_bar"
                android:progressTint="#ffd966" />

            <ProgressBar
                android:id="@+id/progress3_3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="0"
                android:progressBackgroundTint="#ead1dc"
                android:progressDrawable="@drawable/rounded_bar"
                android:progressTint="#c27ba0" />

            <TextView
                android:id="@+id/name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginHorizontal="10dp"
                android:text="中正"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/amount3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginHorizontal="10dp"
                android:text="-"
                android:textSize="15dp"
                android:textStyle="bold" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/updateTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="-"
                android:textColor="#b7b7b7"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/updateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="-"
                android:textColor="#b7b7b7"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="4dp"
                android:text="⟳"
                android:textColor="#b7b7b7"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>